{
  "name": "claude-skills",
  "version": "1.0.2",
  "private": true,
  "description": "Claude Code Skills Collection - 一系列 Claude Code 技能的 npm 包",
  "scripts": {
    "sync": "npx tsx scripts/sync-shared.ts",
    "build": "pnpm sync",
    "test:all": "pnpm -r test",
    "tag": "release-it",
    "tag:ci": "release-it --ci",
    "tag:ci:minor": "release-it --ci --increment=minor",
    "tag:ci:major": "release-it --ci --increment=major",
    "release": "pnpm tag && pnpm publish:all",
    "publish": "npx tsx scripts/publish.ts",
    "publish:all": "pnpm -r publish --access public --no-git-checks"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Adonis0123/agent-skill-npm-boilerplate.git"
  },
  "author": "adonis",
  "license": "MIT",
  "devDependencies": {
    "@inquirer/prompts": "^8.2.0",
    "esbuild": "^0.24.0",
    "release-it": "^19.2.3",
    "release-it-pnpm": "^4.6.6",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0"
  }
}
